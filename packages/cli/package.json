{
  "name": "pockethost",
  "version": "0.0.5",
  "main": "./dist/index.js",
  "bin": {
    "pockethost": "./dist/pockethost"
  },
  "author": {
    "name": "Ben Allfree",
    "url": "https://github.com/benallfree"
  },
  "repository": {
    "url": "https://github.com/benallfree/pockethost"
  },
  "scripts": {
    "dev": "chokidar package.json 'src/**' './node_modules/**' -c 'yarn build' --initial",
    "build": " esbuild --bundle src/index.ts --platform='node' --outfile=dist/index.js && yarn build:shebang && npm i -g --force .",
    "build:shebang": "echo \"#!/usr/bin/env node\"|cat - ./dist/index.js > ./dist/pockethost",
    "publish": "npm publish --access public"
  },
  "license": "MIT",
  "devDependencies": {
    "@s-libs/micro-dash": "^14.1.0",
    "@types/eventsource": "^1.1.9",
    "@types/node": "^18.8.2",
    "@types/node-localstorage": "^1.3.0",
    "@types/prompts": "^2.4.1",
    "@types/tmp": "^0.2.3",
    "commander": "^9.4.0",
    "cross-fetch": "^3.1.5",
    "eventsource": "^2.0.2",
    "find-up": "^6.3.0",
    "immer": "^9.0.16",
    "node-localstorage": "^2.2.1",
    "pocketbase": "^0.8.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.2.0",
    "prompts": "^2.4.2",
    "tmp": "^0.2.1"
  },
  "dependencies": {
    "@pockethost/client": "0.0.1",
    "@pockethost/schema": "0.0.1",
    "@pockethost/tools": "0.0.1",
    "@types/inquirer": "^9.0.3",
    "inquirer": "^9.1.4",
    "tsx": "^3.12.1"
  }
}
