{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "noEmit": true,
    "paths": {
      "$util/*": ["src/util/*"],
      "$services/*": ["src/services/*"],
      "$src/*": ["src/*"]
    }
  },

  "ts-node": {
    "esm": true
  },
  "include": ["./src"]
}
