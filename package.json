{
  "name": "pockethost",
  "version": "0.5.3",
  "author": "Ben Allfree <ben@benallfree.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "prettier -c \"./**/*.ts\"",
    "lint:fix": "prettier -w \"./**/*.ts\"",
    "build": "concurrently -r 'yarn build:pocketbase' 'yarn build:daemon' 'yarn build:www'",
    "build:pocketbase": "cd packages/pocketbase && yarn build",
    "build:daemon": "cd packages/daemon && yarn build",
    "build:www": "cd packages/pockethost.io && yarn build",
    "dev:www": "cd packages/pockethost.io && yarn dev",
    "dev:daemon": "cd packages/daemon && yarn dev",
    "start": "concurrently -r 'yarn start:www' 'yarn start:daemon'",
    "start:www": "cd packages/pockethost.io && yarn start",
    "start:daemon": "cd packages/daemon && yarn start",
    "migrate": "yarn migrate:daemon",
    "migrate:daemon": "cd packages/daemon && yarn migrate",
    "postinstall": "patch-package",
    "docker:dev": "PH_DOMAIN=pockethost.test PH_NGINX=`pwd`/docker/mount/nginx PH_CACHE=`pwd`/docker/mount/cache PH_PB_BIN=`pwd`/packages/pocketbase/dist PH_DATA=`pwd`/docker/mount/daemon/instances docker-compose -f docker/dev-run.yaml up --remove-orphans",
    "docker:start": "docker-compose -f docker/prod-run.yaml up --remove-orphans",
    "docker:build": "docker build . --progress=plain --target=prod-pockethost -t benallfree/pockethost:latest -t benallfree/pockethost:0.5.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "semi": false,
    "useTabs": false,
    "singleQuote": true,
    "plugins": [
      "./node_modules/prettier-plugin-organize-imports",
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "prettier-plugin-svelte": "^2.7.0",
    "replace-in-file": "^6.3.5",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "patch-package": "^6.5.0",
    "postinstall-postinstall": "^2.1.0",
    "ssl-root-cas": "^1.3.1"
  }
}
