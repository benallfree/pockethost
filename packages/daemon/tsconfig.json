{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "$util/*": ["util/*"],
      "$services/*": ["services/*"],
      "$src/*": ["*"]
    }
  },

  "ts-node": {
    "esm": true
  },
  "include": ["."]
}
